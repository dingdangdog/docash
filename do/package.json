{
  "name": "docash",
  "description": "Cashbook on Desktop",
  "version": "2.0.1",
  "main": "main.js",
  "author": {
    "name": "dingdangdog",
    "email": "dingdangdogx@outlook.com"
  },
  "i18n": {
    "locales": [
      "zh-CN"
    ],
    "defaultLocale": "zh-CN"
  },
  "build": {
    "asar": false,
    "appId": "docash",
    "productName": "docash",
    "extends": null,
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "installerIcon": "./icon.ico"
    },
    "files": [
      "./icon.ico",
      "./main.js",
      "./preload.js",
      "./handler.js",
      "./icon/**"
    ],
    "extraResources": [
      {
        "from": "resources/dist/",
        "to": "app/ui/"
      },
      {
        "from": "server/",
        "to": "app/server/"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "./icon/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "icon": "./icon/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "./icon/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "Office"
    }
  },
  "scripts": {
    "electron": "electron .",
    "package": "electron-builder",
    "package:all": "electron-builder -mwl"
  },
  "devDependencies": {
    "@types/node": "^16.11.56",
    "electron": "^24.8.8",
    "electron-builder": "^23.6.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@streamparser/json": "^0.0.21",
    "csv-parser": "^3.0.0",
    "fs": "0.0.1-security",
    "json2csv": "6.0.0-alpha.2",
    "lodash.get": "^4.4.2",
    "uuid": "^10.0.0"
  }
}
